<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">


    <ui:style>
        .dashboard-panel { width:100%; overflow: hidden; position: relative; margin: 0 0 15px 0;}
        .dashboard-frame { border: 0px solid; width: 100%; height: 1200px; overflow: hidden;}
    </ui:style>

    <g:VerticalPanel ui:field="panel" styleName="{style.dashboard-panel}">
        <g:Frame ui:field="frame" styleName="{style.dashboard-frame}"/>
        <g:HTML ui:field="message"/>
    </g:VerticalPanel>

</ui:UiBinder>