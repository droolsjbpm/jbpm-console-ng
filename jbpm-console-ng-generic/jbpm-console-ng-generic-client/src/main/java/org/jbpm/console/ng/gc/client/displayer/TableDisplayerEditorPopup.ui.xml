<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
        >
    <ui:with field="i18n" type="org.jbpm.console.ng.gc.client.i18n.TableDisplayerConstants"/>
    <ui:style>
        .mandatory-field {
            color: red;
        }
    </ui:style>
    <g:VerticalPanel>
        <g:FlowPanel>
            <b:Fieldset>
                <b:Form type="HORIZONTAL">
                    <b:ControlGroup ui:field="tableNameControlGroup">
                        <b:ControlLabel for="tableNameText">
                            <span class="{style.mandatory-field}">*</span>
                            <ui:text from="{i18n.Name}"/>
                        </b:ControlLabel>
                        <b:Controls>
                            <b:TextBox ui:field="tableNameText" placeholder="{i18n.Name}"/>
                            <b:HelpInline ui:field="tableNameHelpInline"/>
                        </b:Controls>
                    </b:ControlGroup>
                    <b:ControlGroup ui:field="tableDescControlGroup">
                        <b:ControlLabel for="tableDescText">
                            <span class="{style.mandatory-field}">*</span>
                            <ui:text from="{i18n.Description}"/>
                        </b:ControlLabel>
                        <b:Controls>
                            <b:TextBox ui:field="tableDescText" placeholder="{i18n.Description}"/>
                            <b:HelpInline ui:field="tableDescHelpInline"/>
                        </b:Controls>
                    </b:ControlGroup>
                </b:Form>
            </b:Fieldset>
        </g:FlowPanel>

            <g:FlowPanel ui:field="editorPanel"/>

    </g:VerticalPanel>

</ui:UiBinder>
