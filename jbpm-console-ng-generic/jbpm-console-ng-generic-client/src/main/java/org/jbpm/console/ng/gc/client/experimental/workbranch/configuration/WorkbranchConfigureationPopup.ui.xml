<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="i18n" type="org.jbpm.console.ng.gc.client.i18n.Constants"/>
  <ui:with field="resources" type="org.jbpm.console.ng.gc.client.resources.GenericImages"/>
 <ui:style>
    .container {
      margin: 10px;
    }
    .horizontalContainer {
      height: 32px;
    }
    .left {
      float: left;
      text-align: left
    }
    .right {
      float: right;
      text-align: right;
    }
    .center {
      
      text-align: center
    }
  </ui:style>

  <g:FlowPanel addStyleNames="{style.container}">
    <g:HorizontalPanel  width="100%" addStyleNames="{style.horizontalContainer}">
      <g:cell width="50%">
        <g:FlowPanel width="100%"  addStyleNames="{style.center}">
        	 <g:Label text="{i18n.Language}"/>
        </g:FlowPanel> 
      </g:cell>
      <g:cell width="50%">
        <g:FlowPanel width="100%"   addStyleNames="{style.center}">
             <g:ListBox ui:field="languageListItems"/>
        </g:FlowPanel> 
      </g:cell>
    </g:HorizontalPanel>
    <g:HorizontalPanel width="100%" addStyleNames="{style.horizontalContainer}">
      <g:cell width="50%">
        <g:FlowPanel width="100%"  addStyleNames="{style.center}">
        	 <g:Label text="{i18n.View_Mode}"/>
        </g:FlowPanel> 
      </g:cell>
      <g:cell width="50%">
        <g:FlowPanel width="100%"   addStyleNames="{style.center}">
             <g:ListBox ui:field="mutipleModeItems"/>
        </g:FlowPanel> 
      </g:cell>
    </g:HorizontalPanel>
  </g:FlowPanel>
</ui:UiBinder>
