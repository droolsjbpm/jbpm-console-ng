<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:g='urn:import:com.google.gwt.user.cellview.client'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
        >

    <ui:with field="i18n"
             type="org.jbpm.console.ng.es.client.i18n.Constants"/>

    <gwt:HTMLPanel>
        <b:Well>
            <b:Fieldset>
                <b:ControlGroup>
                    <b:ControlLabel>
                        <ui:text from="{i18n.Number_Of_Attempted_Retries}"/>
                    </b:ControlLabel>
                    <b:Controls>
                        <b:Label ui:field="jobRetries"/>
                    </b:Controls>
                </b:ControlGroup>

                <b:ControlGroup>
                    <b:ControlLabel>
                        <ui:text from="{i18n.Execution_Parameters}"/>
                    </b:ControlLabel>
                    <b:Controls>
                        <b:DataGrid ui:field="executionParametersGrid">
                        </b:DataGrid>
                    </b:Controls>
                </b:ControlGroup>

                <b:ControlGroup ui:field="errorControlGroup">
                    <b:ControlLabel>
                        <ui:text from="{i18n.Exceptions_Occurred}"/>
                    </b:ControlLabel>
                    <b:Controls>
                        <gwt:VerticalPanel ui:field="errorsOccurredList"/>
                    </b:Controls>
                </b:ControlGroup>

            </b:Fieldset>
        </b:Well>

    </gwt:HTMLPanel>

</ui:UiBinder>