<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:c="urn:import:org.jbpm.console.ng.gc.client.util"
        >

    <ui:with field="i18n" type="org.jbpm.console.ng.ht.client.i18n.Constants"/>
    <ui:style>
        .fieldPosition {
            margin-left: 20px;
        }


    </ui:style>

    <g:HTMLPanel>
        <b:TabPanel ui:field="tabPanel">
            <b:Tab heading="{i18n.Basic}">
                <b:Fieldset>
                    <b:ControlGroup ui:field="taskNameControlGroup">
                        <g:HorizontalPanel>
                            <g:cell width="190px" horizontalAlignment="right">
                                <b:ControlLabel>
                                    <g:Label text="{i18n.Task_Name}"/>
                                </b:ControlLabel>
                            </g:cell>
                            <g:cell horizontalAlignment="left">
                                <b:Controls>
                                    <b:TextBox ui:field="taskNameText" styleName="{style.fieldPosition}"/>
                                    <b:HelpBlock ui:field="taskNameHelpLabel" styleName="{style.fieldPosition}"/>
                                </b:Controls>
                            </g:cell>
                        </g:HorizontalPanel>
                    </b:ControlGroup>
                </b:Fieldset>
            </b:Tab>
            <b:Tab heading="{i18n.Advanced}" ui:field="advancedTab">
                <!--b:Button ui:field="advancedButton" text="{i18n.Advanced}" styleName="page-header"/ -->
                <!--b:Fieldset ui:field="advancedFieldset"-->
                <b:Fieldset>
                    <b:ControlGroup>
                        <g:HorizontalPanel>
                            <g:cell horizontalAlignment="right">
                                <b:ControlLabel>
                                    <g:Label text="{i18n.Due_On}"/>
                                </b:ControlLabel>
                            </g:cell>
                            <g:cell horizontalAlignment="left">
                                <b:Controls>
                                    <c:UTCDateBox ui:field="dueDate" styleName="{style.fieldPosition}"/>
                                </b:Controls>
                            </g:cell>
                            <g:cell horizontalAlignment="left">
                                <b:Controls>
                                    <c:UTCTimeBox ui:field="dueDateTime" styleName="{style.fieldPosition}"/>
                                </b:Controls>
                            </g:cell>
                        </g:HorizontalPanel>
                    </b:ControlGroup>
                    <b:ControlGroup>
                        <g:HorizontalPanel>
                            <g:cell horizontalAlignment="right">
                                <b:ControlLabel>
                                    <g:Label text="{i18n.Priority}"/>
                                </b:ControlLabel>
                            </g:cell>
                            <g:cell horizontalAlignment="left">
                                <b:Controls>
                                    <b:ListBox ui:field="taskPriorityListBox" styleName="{style.fieldPosition}"/>
                                </b:Controls>
                            </g:cell>
                        </g:HorizontalPanel>
                    </b:ControlGroup>
                    <b:ControlGroup>
                        <g:HorizontalPanel>
                            <g:cell width="250px" horizontalAlignment="right">
                                <b:Button ui:field="addUserButton" text="{i18n.Add_User}"/>
                            </g:cell>
                            <g:cell horizontalAlignment="left">
                                <b:Button ui:field="addGroupButton" text="{i18n.Add_Group}"/>
                            </g:cell>
                        </g:HorizontalPanel>
                    </b:ControlGroup>
                    <g:FlowPanel ui:field="usersGroupsControlsPanel"/>

                </b:Fieldset>
            </b:Tab>
        </b:TabPanel>

        <b:ControlGroup ui:field="errorMessagesGroup">
            <b:HelpBlock ui:field="errorMessages"/>
        </b:ControlGroup>

    </g:HTMLPanel>

</ui:UiBinder>
