  <build>
    <finalName>${project.artifactId}</finalName>
    <outputDirectory>src/main/webapp/WEB-INF/classes</outputDirectory>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>gwt-maven-plugin</artifactId>
          <configuration>
            <deploy>${project.build.directory}/gwt-symbols-deploy</deploy>
            <localWorkers>${gwt.compiler.localWorkers}</localWorkers>
            <extraJvmArgs>${gwt.memory.settings} -XX:CompileThreshold=7000 -Derrai.jboss.home=${jboss.home}</extraJvmArgs>
            <strict>true</strict>
            <logLevel>INFO</logLevel>
            <noServer>false</noServer>
            <server>org.jboss.errai.cdi.server.gwt.EmbeddedWildFlyLauncher</server>
            <module>org.jbpm.workbench.cm.FastCompiledjBPMCaseManagement</module>
            <disableCastChecking>true</disableCastChecking>
            <runTarget>jbpm-cm.html</runTarget>
            <hostedWebapp>src/main/webapp</hostedWebapp>
            <draftCompile>true</draftCompile>
            <compileSourcesArtifacts>
              <!-- UberFire -->
              <compileSourcesArtifact>org.uberfire:uberfire-commons</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-nio2-model</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-io</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-api</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-js</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-security-api</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-security-client</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-client-api</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-workbench-client</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-workbench-client-backend</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-workbench-client-views-patternfly</compileSourcesArtifact>
              <compileSourcesArtifact>org.uberfire:uberfire-backend-api</compileSourcesArtifact>

              <!-- Dashbuilder -->
              <compileSourcesArtifact>org.dashbuilder:dashbuilder-json</compileSourcesArtifact>
              <compileSourcesArtifact>org.dashbuilder:dashbuilder-dataset-api</compileSourcesArtifact>

              <!-- jBPM Case Management -->
              <compileSourcesArtifact>org.jbpm:jbpm-wb-case-mgmt-api</compileSourcesArtifact>
              <compileSourcesArtifact>org.jbpm:jbpm-wb-case-mgmt-client</compileSourcesArtifact>
            </compileSourcesArtifacts>
          </configuration>
        </plugin>
        <plugin>
          <groupId>io.fabric8</groupId>
          <artifactId>docker-maven-plugin</artifactId>
          <version>0.18.1</version>
          <configuration>
            <images>
              <image>
                <name>jboss/jbpm-case-mgmt-showcase-demo:${project.version}</name>
                <build>
                  <from>jboss/wildfly:10.0.0.Final</from>
                  <ports>
                    <port>8080</port>
                  </ports>
                  <cmd>
                    <exec>
                      <arg>/opt/jboss/wildfly/bin/standalone.sh</arg>
                      <arg>-b</arg>
                      <arg>0.0.0.0</arg>
                      <arg>-c</arg>
                      <arg>standalone-full-jbpm.xml</arg>
                      <arg>-Dorg.kie.server.location=http://localhost:8080/kie-server/services/rest/server</arg>
                      <arg>-Dorg.kie.demo=true</arg>
                    </exec>
                  </cmd>
                  <runCmds>
                    <run>/opt/jboss/wildfly/bin/add-user.sh -u admin -p admin -g kie-server,user -a -s</run>
                    <run>/opt/jboss/wildfly/bin/add-user.sh -u user -p user -g kie-server,user -a -s</run>
                    <run>/opt/jboss/wildfly/bin/add-user.sh -u kieserver -p kieserver1! -g kie-server -a -s</run>
                    <run>ln -s /maven/jbpm-wb-case-mgmt-showcase.war /opt/jboss/wildfly/standalone/deployments/jbpm-wb-case-mgmt-showcase.war</run>
                    <run>ln -s /maven/kie-server.war /opt/jboss/wildfly/standalone/deployments/kie-server.war</run>
                    <run>mkdir $HOME/.m2</run>
                    <run>ln -s /maven/settings.xml $HOME/.m2/settings.xml</run>
                    <run>ln -s /maven/standalone-full-jbpm.xml /opt/jboss/wildfly/standalone/configuration/standalone-full-jbpm.xml</run>
                  </runCmds>
                  <assembly>
                    <inline>
                      <dependencySets>
                        <dependencySet>
                          <includes>
                            <include>org.jbpm:jbpm-wb-case-mgmt-showcase:war</include>
                          </includes>
                          <outputFileNameMapping>jbpm-wb-case-mgmt-showcase.war</outputFileNameMapping>
                        </dependencySet>
                        <dependencySet>
                          <scope>provided</scope>
                          <useProjectArtifact>false</useProjectArtifact>
                          <includes>
                            <include>org.kie.server:kie-server:war:ee7</include>
                          </includes>
                          <outputFileNameMapping>kie-server.war</outputFileNameMapping>
                        </dependencySet>
                      </dependencySets>
                      <fileSets>
                        <fileSet>
                          <directory>src/main/docker</directory>
                          <outputDirectory>.</outputDirectory>
                        </fileSet>
                      </fileSets>
                    </inline>
                    <user>jboss:jboss:jboss</user>
                  </assembly>
                </build>
                <run>
                  <ports>
                    <port>wildfly.port:8080</port>
                  </ports>
                  <log>
                    <enabled>true</enabled>
                  </log>
                  <env>
                    <M2_HOME>$HOME/.m2</M2_HOME>
                  </env>
                  <wait>
                    <http>
                      <url>http://localhost:${wildfly.port}/jbpm-cm/jbpm-cm.html</url>
                      <method>GET</method>
                      <status>200</status>
                    </http>
                    <time>60000</time>
                  </wait>
                </run>
              </image>
            </images>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>gwt-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>gwt-clean</id>
            <phase>clean</phase>
            <goals>
              <goal>clean</goal>
            </goals>
          </execution>
          <execution>
            <id>gwt-compile</id>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <packagingExcludes>
            WEB-INF/classes/org/jbpm/workbench/cm/client/**,
            WEB-INF/classes/org/jbpm/workbench/cm/public/**,
            WEB-INF/classes/logback.xml,
            **/*.gwt.xml,
            **/*.symbolMap
          </packagingExcludes>
          <archive>
            <addMavenDescriptor>false</addMavenDescriptor>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>${basedir}</directory>
              <includes>
                <include>src/main/webapp/org.jbpm.workbench.cm.jBPMCaseManagement/</include>
                <include>src/main/webapp/WEB-INF/deploy/</include>
                <include>src/main/webapp/WEB-INF/classes/</include>
                <include>src/main/webapp/WEB-INF/lib/</include>
                <include>repositories/</include>
                <include>.errai/</include>
                <include>.niogit/**</include>
                <include>.index/**</include>
              </includes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.wildfly</groupId>
                  <artifactId>wildfly-dist</artifactId>
                  <version>${version.org.wildfly.gwt.sdm}</version>
                  <type>zip</type>
                  <overWrite>false</overWrite>
                  <outputDirectory>${project.build.directory}</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
            <configuration>
              <systemPropertyVariables>
                <arquillian.launch>wildfly-managed</arquillian.launch>
                <jboss.home>${jboss.home}</jboss.home>
                <java.util.logging.manager>org.jboss.logmanager.LogManager</java.util.logging.manager>
              </systemPropertyVariables>
              <redirectTestOutputToFile>false</redirectTestOutputToFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>docker</id>
      <activation>
        <property>
          <name>docker</name>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.kie.server</groupId>
          <artifactId>kie-server</artifactId>
          <type>war</type>
          <classifier>ee7</classifier>
          <scope>provided</scope>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>docker-maven-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>build</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!-- Full profile builds all GWT permutations -->
    <profile>
      <id>fullProfile</id>
      <activation>
        <property>
          <name>full</name>
        </property>
      </activation>
      <properties>
        <gwt.compiler.localWorkers>2</gwt.compiler.localWorkers>
      </properties>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>gwt-maven-plugin</artifactId>
              <configuration>
                <module>org.jbpm.workbench.cm.jBPMCaseManagement</module>
                <draftCompile>false</draftCompile>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
  </profiles>

